<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:colorBackground">@color/white</item>
        <!--<item name = "android:windowIsTranslucent">true</item>-->
        <item name = "android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name = "AppTheme.AppDescripTheme">
        <item name = "android:windowIsTranslucent">true</item>
        <item name = "android:windowCloseOnTouchOutside">true</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="BottomNavigationViewActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationViewLow" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">8sp</item>
        <item name="android:autoSizeMinTextSize">7sp</item>
        <item name="android:autoSizeMaxTextSize">14sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="BottomNavigationViewActiveLow" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">9sp</item>
        <item name="android:autoSizeMinTextSize">8sp</item>
        <item name="android:autoSizeMaxTextSize">15sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

</resources>
